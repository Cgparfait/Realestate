<section id="contact" class="text-gray-800 py-24" style="scroll-margin-top: 30px;">
    <div class="container mx-auto px-8">
      <h2 class="text-4xl font-bold text-center mb-16">Contact Us</h2>
      <form class="max-w-2xl mx-auto" method="post" action="/send-email" id="contact-form">
        <input type="text" name="address" id="contact-address-input" placeholder="Enter property address" class="w-full px-8 py-4 mb-6 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 border">
        <input type="text" name="name" id="contact-name-input" placeholder="Your Name" class="w-full px-8 py-4 mb-6 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 border">
        <div class="md:flex gap-2">
          <input type="text" name="phone" id="contact-phone-input" placeholder="Your Phone number" class="w-full px-8 py-4 mb-6 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 border">
          <input type="email" name="email" id="contact-email-input" placeholder="Your Email" class="w-full px-8 py-4 mb-6 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 border">
        </div>
        <textarea placeholder="Your Message" name="message" id="contact-message-input" class="w-full px-8 py-4 mb-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 border h-32 text-gray-700"></textarea>
        <button type="submit" class="btn-primary px-10 py-4 rounded-lg text-white font-bold w-full">Send Message</button>
      </form>
    </div>
  </section>