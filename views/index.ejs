<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>We Buy Any House | Fast, Fair, and Hassle-Free</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Lato:wght@400;700&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/ScrollTrigger.min.js"></script>
  <style>
    @font-face {
      font-family: 'customFont';
      src: url('./fonts/IBM Plex Sans.ttf') format('truetype'),
        font-weight: normal;
      font-style: normal;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: 'customFont','Lato', sans-serif;
    }

    h1,
    h2,
    h3 {
      font-family: 'customFont','Montserrat', sans-serif;
    }

    .btn-primary {
      background: linear-gradient(45deg, #6D28D9, #8B5CF6);
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .btn-primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 15px rgba(109, 40, 217, 0.3);
    }

    .hero-section {
      background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.7)), url('https://cdn.pixabay.com/photo/2022/01/26/04/47/house-6967908_1280.jpg');
      background-size: cover;
      background-position: center;
    }

    .card-hover {
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .card-hover:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    .gradient-text {
      background: linear-gradient(45deg, #6D28D9, #8B5CF6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .services-image1 {
      background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.8)), url('https://cdn.pixabay.com/photo/2016/12/26/13/16/backgrounds-1932041_1280.jpg');
      background-size: cover;
      background-position: center;
    }

    .contact {
      background-color: #6D28D9;
      background: linear-gradient(31, 41, 55, 0.9), rgba(31, 41, 55, 0.1), url('https://cdn.pixabay.com/photo/2016/11/29/06/56/abstract-1867937_1280.jpg');
      background-size: cover;
      background-position: center;
    }

    .custom-shape-divider-top-1741610239 {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      overflow: hidden;
      line-height: 0;
    }
  </style>
</head>

<body class="bg-[#F9FAFB]">

  <!-- Header -->
  <header class="navbar bg-white text-gray-800 sticky top-0 z-50 shadow-lg">
    <div class="container mx-auto flex justify-between items-center px-8 py-6">
      <div class="flex items-center">
        <a href="/">
          <img src="./lioness-homes-logo.svg" alt="We Buy Any House Logo" class="lg:w-52 lg:h-12 object-cover w-40 h-10">
        </a>
      </div>
      <!-- Desktop Nav -->
      <nav class="hidden lg:flex space-x-10">
        <a href="#home" class="text-gray-900 transition-colors hover:text-purple-600" onclick="mobileMenu.classList.toggle('hidden')">Home</a>
        <a href="#services" class="text-gray-900 transition-colors hover:text-purple-600" onclick="mobileMenu.classList.toggle('hidden')">Services</a>
        <a href="#about" class="text-gray-900 transition-colors hover:text-purple-600">About Us</a>
        <a href="#how-it-works" class="text-gray-900 transition-colors hover:text-purple-600">How It Works</a>
        <a href="#testimonials" class="text-gray-900 transition-colors hover:text-purple-600">Testimonials</a>
        <a href="#contact" class="text-gray-900 transition-colors hover:text-purple-600">Contact</a>
      </nav>
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="lg:hidden text-gray-800 focus:outline-none">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    <!-- Mobile Dropdown Menu -->
    <div id="mobile-menu" class="lg:hidden hidden bg-white text-gray-800">
      <a href="#services" class="block px-8 py-4 hover:bg-purple-50" onclick="hideNavbar()">Services</a>
      <a href="#how-it-works" class="block px-8 py-4 hover:bg-purple-50" onclick="hideNavbar()">How It Works</a>
      <a href="#about" class="block px-8 py-4 hover:bg-purple-50" onclick="hideNavbar()">About Us</a>
      <a href="#contact" class="block px-8 py-4 hover:bg-purple-50" onclick="hideNavbar()">Contact</a>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero-section text-gray-200 py-32 min-h-[calc(100vh-4rem)]" id="home" style="scroll-margin-top: 100px;">
    <div class="container mx-auto text-center px-6 leading-relaxed font-thin">
      <h1 class="md:text-4xl mb-6 animate-fade-in">Sell Your House Fast, <span class="gradient-text">No Matter the Situation!</span></h1>
      <p class="md:text-xl text-lg mb-8 max-w-2xl mx-auto animate-fade-in">Facing foreclosure, probate, or inherited a property? We buy houses in any condition, anywhere. Get a fair cash offer today!</p>
      <div class="flex justify-center animate-fade-in">
        <input type="text" placeholder="Enter property Address" id="home-address-field" class="px-8 py-4 rounded-l-lg text-gray-800 w-96 focus:outline-none focus:ring-2 focus:ring-purple-500">
        <button class="btn-primary md:px-10 px-4 md:py-4 py-2 rounded-r-lg text-white hover:bg-purple-700 transition-colors text-md" onclick="carryAddress(document.getElementById('home-address-field').value)">Get Cash Offer</button>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-24 text-gray-800" style="scroll-margin-top: 80px;">
    <div class="container mx-auto px-8">
      <h2 class="text-4xl font-bold text-center mb-16">We Buy Houses In Any Situation</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <div class="bg-white p-10 rounded-lg shadow-lg text-center card-hover cursor-pointer services-image1 text-white">
          <h3 class="text-2xl font-bold mb-6">Behind on Taxes?</h3>
          <p class="text-gray-100">Avoid foreclosure and get cash for your home quickly. We’ll handle the paperwork and make the process stress-free.</p>
          <a href="#contact" class="text-purple-600 font-semibold mt-4 inline-block">Learn More →</a>
        </div>
        <div class="bg-white p-10 rounded-lg shadow-lg text-center card-hover cursor-pointer services-image1">
          <h3 class="text-2xl font-bold mb-6 text-gray-100">Probate Properties</h3>
          <p class="text-gray-100">Inherited a property? We’ll help you navigate the legal complexities and sell it fast for cash.</p>
          <a href="#contact" class="text-purple-600 font-semibold mt-4 inline-block">Learn More →</a>
        </div>
        <div class="bg-white p-10 rounded-lg shadow-lg text-center card-hover cursor-pointer services-image1">
          <h3 class="text-2xl font-bold mb-6 text-gray-100">Distressed Properties</h3>
          <p class="text-gray-100">No matter the condition, we’ll make you a fair offer. No repairs needed!</p>
          <a href="#contact" class="text-purple-600 font-semibold mt-4 inline-block">Learn More →</a>
        </div>
      </div>
    </div>
  </section>

  <!-- About Us Section -->
  <section id="about" class="bg-gray-800 py-24 parallax" style="scroll-margin-top: 55px;">
    <div class="container mx-auto px-8">
      <h2 class="text-4xl font-bold text-center mb-16 text-gray-200">About Us</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 leading-loose font-thin">
        <div>
          <p class="text-gray-200 mb-6">At <span class="">We Buy Any House</span>, we specialize in helping homeowners sell their properties quickly and hassle-free. Whether you're facing foreclosure, dealing with probate, or have a distressed property, we’re here to help.</p>
          <p class="text-gray-200 mb-6">With over <span class="">10 years of experience</span>, we’ve helped hundreds of homeowners get fair cash offers for their homes. Our process is simple, transparent, and designed to put you first.</p>
          <a href="#contact" class="btn-primary px-8 py-3 rounded-lg text-white inline-block">Contact Us Today</a>
        </div>
        <div>
          <img src="https://media.istockphoto.com/id/1437465752/photo/arrest-of-house-court-decision-on-sale-of-house-real-estate-auctions.jpg?s=612x612&w=0&k=20&c=Wtus1_oIolArDYoSxSalTG5PrNTEFtJf0N-LFWnhGDk=" alt="About Us" class="rounded-lg shadow-lg">
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works" class="bg-white py-24 parallax2" style="scroll-margin-top: 80px;">
    <div class="container mx-auto px-8">
      <h2 class="text-4xl font-bold text-center mb-16">How It Works</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <div class="bg-white p-10 rounded-lg shadow-lg text-center card-hover services-image1 cursor-pointer">
          <span class="text-6xl font-bold bg-gray-200 text-gray-800 px-5 rounded">1</span>
          <h3 class="text-2xl font-bold mb-6 text-gray-200 mt-8">Contact Us</h3>
          <p class="text-gray-200">Fill out our form or give us a call. We’ll ask for a few details about your property.</p>
        </div>
        <div class="bg-white p-10 rounded-lg shadow-lg text-center card-hover services-image1 cursor-pointer">
          <span class="text-6xl font-bold bg-gray-200 text-gray-800 px-5 rounded">2</span>
          <h3 class="text-2xl font-bold mb-6 text-gray-200 mt-8">Get a Fair Offer</h3>
          <p class="text-gray-200">We’ll evaluate your property and make you a no-obligation cash offer within 24 hours.</p>
        </div>
        <div class="bg-white p-10 rounded-lg shadow-lg text-center card-hover services-image1 cursor-pointer">
          <span class="text-6xl font-bold bg-gray-200 text-gray-800 px-5 rounded">3</span>
          <h3 class="text-2xl font-bold mb-6 text-gray-200 mt-8">Close on Your Timeline</h3>
          <p class="text-gray-200">We close quickly and handle all the paperwork. You get paid on your schedule.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-24 bg-gray-800 text-gray-200" id="testimonials" style="scroll-margin-top: 90px;">
    <div class="container mx-auto px-8">
      <h2 class="text-4xl font-bold text-center mb-16">What Our Clients Say</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 cursor-pointer">
        <div class="bg-white p-10 rounded-lg shadow-lg card-hover">
          <p class="text-gray-600 mb-6">"They bought my house even though I was in foreclosure. The process was so easy and stress-free!"</p>
          <p class="font-bold text-purple-600">– Jane Doe</p>
        </div>
        <div class="bg-white p-10 rounded-lg shadow-lg card-hover cursor-pointer">
          <p class="text-gray-600 mb-6">"I inherited a property and didn’t know what to do. They made it simple and gave me a fair offer!"</p>
          <p class="font-bold text-purple-600">– John Smith</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="text-gray-800 py-24 bg-none" style="scroll-margin-top: 30px;">
    <div class="container mx-auto px-8">
      <h2 class="text-4xl font-bold text-center mb-16">Contact Us</h2>
      <form class="max-w-2xl mx-auto" method="post" action="/send-email">
        <input type="text" name="address" id="contact-address-input" placeholder="Enter property address" class="w-full px-8 py-4 mb-6 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 border">
        <input type="text" name="name" placeholder="Your Name" class="w-full px-8 py-4 mb-6 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 border">
        <div class="md:flex gap-2">
          <input type="text" name="phone" placeholder="Your Phone number" class="w-full px-8 py-4 mb-6 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 border">
          <input type="email" name="email" placeholder="Your Email" class="w-full px-8 py-4 mb-6 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 border">
        </div>
        <textarea placeholder="Your Message" name="message" class="w-full px-8 py-4 mb-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 border h-32 font-bold text-gray-700"></textarea>
        <button type="submit" class="btn-primary px-10 py-4 rounded-lg text-white font-bold w-full">Send Message</button>
      </form>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-6">
    <div class="container mx-auto px-8 text-center">
      <p>&copy; 2023 We Buy Any House. All rights reserved.</p>
    </div>
  </footer>

  <!-- GSAP Animations -->
  <script>
    gsap.registerPlugin(ScrollTrigger);

    // Hero Section Animations
    gsap.from(".hero-section h1", {
      opacity: 0,
      y: 50,
      duration: 1,
      scrollTrigger: {
        trigger: ".hero-section",
        start: "top 80%",
      },
    });

    gsap.from(".hero-section p", {
      opacity: 0,
      y: 50,
      duration: 1,
      delay: 0.3,
      scrollTrigger: {
        trigger: ".hero-section",
        start: "top 80%",
      },
    });

    gsap.from(".hero-section form", {
      opacity: 0,
      y: 50,
      duration: 1,
      delay: 0.6,
      scrollTrigger: {
        trigger: ".hero-section",
        start: "top 80%",
      },
    });

    // Services Section Animations
    gsap.from("#services h2", {
      opacity: 0,
      y: 50,
      duration: 1,
      scrollTrigger: {
        trigger: "#services",
        start: "top 80%",
      },
    });

    gsap.from("#services .card-hover", {
      opacity: 0,
      y: 50,
      duration: 1,
      stagger: 0.3,
      scrollTrigger: {
        trigger: "#services",
        start: "top 80%",
      },
    });

    // About Us Section Animations
    gsap.from("#about h2", {
      opacity: 0,
      y: 50,
      duration: 1,
      scrollTrigger: {
        trigger: "#about",
        start: "top 80%",
      },
    });

    gsap.from("#about p", {
      opacity: 0,
      y: 50,
      duration: 1,
      stagger: 0.3,
      scrollTrigger: {
        trigger: "#about",
        start: "top 80%",
      },
    });

    gsap.from("#about img", {
      opacity: 0,
      x: 50,
      duration: 1,
      scrollTrigger: {
        trigger: "#about",
        start: "top 80%",
      },
    });

    // How It Works Section Animations
    gsap.from("#how-it-works h2", {
      opacity: 0,
      y: 50,
      duration: 1,
      scrollTrigger: {
        trigger: "#how-it-works",
        start: "top 80%",
      },
    });

    gsap.from("#how-it-works .card-hover", {
      opacity: 0,
      y: 50,
      duration: 1,
      stagger: 0.3,
      scrollTrigger: {
        trigger: "#how-it-works",
        start: "top 80%",
      },
    });

    // Testimonials Section Animations
    gsap.from(".testimonials h2", {
      opacity: 0,
      y: 50,
      duration: 1,
      scrollTrigger: {
        trigger: ".testimonials",
        start: "top 80%",
      },
    });

    gsap.from(".testimonials .card-hover", {
      opacity: 0,
      y: 50,
      duration: 1,
      stagger: 0.3,
      scrollTrigger: {
        trigger: ".testimonials",
        start: "top 80%",
      },
    });

    // Contact Section Animations
    gsap.from("#contact h2", {
      opacity: 0,
      y: 50,
      duration: 1,
      scrollTrigger: {
        trigger: "#contact",
        start: "top 80%",
      },
    });

    gsap.from("#contact form", {
      opacity: 0,
      y: 50,
      duration: 1,
      scrollTrigger: {
        trigger: "#contact",
        start: "top 80%",
      },
    });

    // Mobile Menu Toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    function hideNavbar() {
      mobileMenu.classList.toggle('hidden')
    }

    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });

    // Navbar Scroll Effect
    const navbar = document.querySelector('.navbar');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
    });

    function carryAddress(addressValue) {
      document.getElementById('contact-address-input').value = addressValue;
      window.location.href = "#contact";
    }
  </script>
</body>

</html>